<div class="field">
  <div class="container">
    <div class="bg-secondary text-black">ショッピングカート</div>

    <div class="form-group">
        <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete,class: "btn btn-danger btn-sm" %>
    </div>

    <table class='table table-hover table-inverse'>
      <thead class="bg-secondary text-black">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
          <th colspan="5"></th>
        </tr>
      </thead>

       <% @cart_items.each do |cart_item| %>
       <tbody>
        <tr>
         <td><%= image_tag cart_item.item.get_image(100,100) %><%= cart_item.item.name %></td>
         <td><%= cart_item.item.with_tax_price %></td>
         <td>
             <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
             <%= f.select :amount, *[1..99] %>
             <%= f.submit "変更", class: "btn btn-success" %>
             <% end %>
         </td>
         <td><%= cart_item.subtotal %></td>
         <td>
             <% if cart_item.customer == current_customer %>
             <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %>
             <% end %>
        </td>
        </tr>
       </tbody>
      <% end %>
    </table>

    <div class="form-group">
        <%= link_to '買い物を続ける',items_path, class: "btn btn-primary" %>
    </div>

  <table class="table table-striped table-bordered table-hover ">
   <tbody>
      <tr>
        <td class="active">合計金額</td>
        <td>
             <% @cart_items.each do |cart_item| %>
             <% @total = @total + cart_item.subtotal %>
             <% end %>
             <%= @total %>
        </td>
      </tr>
   </tbody>
  </table>

    <div class="form-group">
        <%= link_to '情報入力に進む',orders_new_path, class: "btn btn-success" %>
    </div>

 </div>
 </div>