<div class="field">
  <div class="container">
    <div class="bg-secondary text-black">ショッピングカート</div>

    <div class="bg-danger text-white">
        <%= link_to "カートを空にする", cart_items_path, method: :destroy_all %>
    </div>

    <table class='table table-hover table-inverse'>
      <thead class="bg-secondary text-black">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
          <th colspan="5"></th>
        </tr>
      </thead>

      <tbody>
       <% @cart_items.each do |cart_item| %>
        <tr>
         <td><%= cart_item.item.image %><%= cart_item.item.name %></td>
         <td><%= cart_item.item.with_tax_price %></td>
         <td><%= cart_item.item.amount %></td>
         <td><%= cart_item.item.subtotal %></td>
         <td>
             <% if cart_item.customer == current_customer %>
             <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %>
             <% end %>
        </td>
        </tr>
       <% end %>
      </tbody>
    </table>