<div class="container">
    <div class="col-sm-2 mt-4 ml-3 "><h3>商品一覧</h3></div>
  <div class="row">

   <% @items.each do |item| %>
    <div class="d-flex flex-column bd-highlight mb-3 ml-4 text-wrap-4">
      <div> <%= link_to item_path(item.id) do %>
             <%= image_tag item.get_image(300,500) %>
      </div><% end %>
     <div><%= item.name %></div>
     <div>¥<%= item.price %></div>
    </div>
   <% end %>

  </div>
   <%= paginate @items %>
 </div>


