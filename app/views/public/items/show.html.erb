<div class="container">


  <div class="row mt-5 center-block">
    <div class="col text-right">
     <%= image_tag @item.image, size:"250x200" %>
    </div>

   <div class="inline col ml-5">
    <div class="row">
     <h3 class="col-sm-7">
      <%= @item.name %>
     </h3>
    </div>

    <div class="row">
     <div class="col-sm-7 mt-3">
      <h5><%= @item.introduction %></h5>
     </div>
    </div>

    <div class="row mt-3">
     <div class="col-sm-3">
      ジャンル
     </div>
     <div class="col">
      <%= @item.genre.name %>
     </div>
    </div>

    <div class="row">
     <div class="col-sm-7 mt-5">
      <h4>¥<%= (@item.price*1.1).floor.to_s(:delimited) %>（税込）</h4>
     </div>
    </div>

    <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
   <div class="row">
    <div class="mt-5">
         <%= f.label :quantity, "個数選択" %>
         <%= f.select :amount, *[1..10] %>
    </div>
    <div class="mt-5 ml-5">
         <%= f.hidden_field :item_id, :value => @item.id %>
         <%= f.submit 'カートに入れる' ,class: "btn btn-success" %>
    </div>
   </div>
    <% end %>
   </div>
  </div>


</div>
