<div class="container">
  <h1>マイページ</h1>

 <div class="row">
  <div class="col-sm-2 ">
   <h4>登録情報</h4>
  </div>
  <div class="col">
   <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %>
  </div>
 </div>

    <table class="table">
      <tbody>

        <tr>
          <th scope="row">氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %> </td>
        </tr>
        <tr>
          <th scope="row">カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %> </td>
        </tr>
        <tr>
          <th scope="row">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th scope="row">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th scope="row">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

      </tbody>
    </table>

  <div class="col-sm-2 mb-4 row">
   <h4>注文履歴</h4>
   <div class="form-group ml-4">
        <%= link_to '情報入力に進む',orders_path, class: "btn btn-primary" %>
    </div>

  </div>

 </div>
