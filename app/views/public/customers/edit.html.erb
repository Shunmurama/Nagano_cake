<h1>会員登録情報</h1>

<%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>

 <div class="field">
   <div class="container">
    <div class="row">
     <div class="col-sm-3">
      名前
     </div>
     <div class="col-sm-1">
      （姓）
     </div>
     <div class="col-sm-3">
      <%= f.text_field :last_name %>
     </div>
     <div class="col-sm-1">
      （名）
     </div>
     <div class="col">
      <%= f.text_field :first_name %>
     </div>
    </div>

    <div class="row">
     <div class="col-sm-3">
      フリガナ
     </div>
     <div class="col-sm-1">
      （セイ）
     </div>
     <div class="col-sm-3">
      <%= f.text_field :last_name_kana %>
     </div>
      <div class="col-sm-1">
      （メイ）
     </div>
     <div class="col">
      <%= f.text_field :first_name_kana %>
     </div>
    </div>

    <div class="row">
     <div class="col">
      メールアドレス
     </div>
     <div class="col">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div>
    </div>

    <div class="row">
     <div class="col">
      郵便番号（ハイフンなし）
     </div>
     <div class="col">
      <%= f.text_field :postal_code %>
     </div>
    </div>

    <div class="row">
     <div class="col-sm-4">
      住所
     </div>
     <div class="col-sm-8">
      <%= f.text_field :address %>
     </div>
    </div>

    <div class="row">
     <div class="col">
      電話番号（ハイフンなし）
     </div>
     <div class="col">
      <%= f.text_field :telephone_number %>
     </div>
    </div>



    <div class="actions">
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
    </div>

    <% end %>

  </div>
 </div>

