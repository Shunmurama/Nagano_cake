<div class="container">
      <div class="mt-4 ml-3 table-secondary col-sm-5 text-center"><h3>会員情報編集</h3></div>

<%= form_with model: @customer, url: customers_information_path do |f| %>

    <div class="mt-5 ml-4 row">
      <div class="col-sm-3">氏名</div>
      <div><%= f.text_field :last_name %></div>
      <div class="ml-3"><%= f.text_field :first_name %></div>
    </div>

    <div class="mt-2 ml-4 row">
      <div class="col-sm-3">フリガナ</div>
      <div><%= f.text_field :last_name_kana %></div>
      <div class="ml-3"><%= f.text_field :first_name_kana %></div>
    </div>

    <div class="mt-2 ml-4 row">
      <div class="col-sm-3">郵便番号</div>
      <div><%= f.text_field :postal_code %></div>
    </div>

    <div class="mt-2 ml-4 row">
      <div class="col-sm-3">住所</div>
      <div><%= f.text_area :address, class: "hogehoge", size: "50x1" %></div>
    </div>

    <div class="mt-2 ml-4 row">
      <div class="col-sm-3">電話番号</div>
      <div><%= f.text_field :telephone_number %></div>
    </div>

    <div class="mt-2 ml-4 row">
      <div class="col-sm-3">メールアドレス</div>
      <div><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>


    <div class="row mt-3">
     <div class="col-sm-3"></div>
     <div class="ml-5">
      <%= f.submit "編集内容を保存", class: "btn btn-success" %>
     </div>

     <div class="col text-center pl-2">
      <%= link_to "退会する", withdraw_path, class: "btn btn-danger" %>
     </div>

    <% end %>

  </div>
 </div>

