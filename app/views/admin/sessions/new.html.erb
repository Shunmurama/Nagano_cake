<div class="container-fluid">

<h2>管理者ログイン</h2>

<%= form_with model: @customer, url: admin_session_path do |f| %>
  <table>
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
    </tr>
    <tr>
      <th><%= f.label :パスワード %></th>
      <th><%= f.password_field :encrypted_password, autocomplete: "current-encrypted_password" %></th>
    </tr>
  </table>
  <%#　レイアウト途中、ボタン変更済み、テーブルで設定すれば、
      ワイヤーフレーム通りになると思って記述している。 %>


  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

</div>

<%= render "admin/shared/links" %>
