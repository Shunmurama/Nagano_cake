<div class="field">
   <div class="container">

<h2>ジャンル機能追加</h2>

<%= form_with model: @genre, url: admin_genres_path do |f| %>

 <div class="row">
  <div class="col">
   ジャンル名
  </div>
  <div class="col">
   <%= f.text_field :name %>
  </div>
  <div class="form-group">
   <%= f.submit '新規登録', class: "btn btn-secondary" %>
  </div>
 </div>
<% end %>




<table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
       <% @genres.each do |genre|%>
        <tr>
         <td><%= genre.name %></td>
         <td ><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
       <% end %>
      </tbody>
</table>

 </div>
</div>