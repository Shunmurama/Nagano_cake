<div class="container">
  <div class="row mb-2">
    <div class="mt-4 col-sm-2 text-center table-secondary"><h4>注文履歴一覧</h4></div>

    <table class='table table-hover table-inverse mt-4'>
      <thead class="table-secondary">
        <tr>
          <th>購入日時</th>
          <th>購入者</th></th>
          <th>注文個数</th>
        </tr>
      </thead>

      <% @orders.each do |order| %>
       <tbody>
        <tr>
         <td><%= link_to admin_order_path(order.id) do %>
             <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
             <% end %>
         </td>
         <td><%= order.customer.full_name %></td>
         <td><%= order.order_items.sum(:amount) %></td>
        </tr>
       </tbody>
      <% end %>
     </table>
  </div>

 <div class="container-fluid">
   <div class="row justify-content-center"><%= paginate @orders %></div>
 </div>

</div>