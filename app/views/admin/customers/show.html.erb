<div class="field">
 <div class="container">

  <div class="col d-inline h2 bg-secondary text-black center-block"><%= @customer.full_name %>さんの会員詳細</div>

    <table class="table">
      <tbody>

        <tr>
          <th scope="row">会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th scope="row">氏名</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th scope="row">フリガナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th scope="row">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th scope="row">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th scope="row">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

      </tbody>
    </table>
　<div class="row">
   <div class="col-sm-3">
     <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
   </div>

   <div class="col-sm-6">
     <%= link_to "注文一覧を見る（ページがないので編集にとぶ）", edit_admin_customer_path(@customer.id), class: "btn btn-primary" %>
   </div>
  </div>



 </div>
