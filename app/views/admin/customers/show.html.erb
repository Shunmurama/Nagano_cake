<div class="container">

  <div class="mt-4 ml-3 table-secondary col-sm-4 text-center"><h3><%= @customer.full_name %>さんの会員詳細</h3></div>

    <div class="mt-5 ml-4 row">
      <div class="col-sm-3">会員ID</div>
      <div><%= @customer.id %></div>
    </div>

    <div class="mt-4 ml-4 row">
      <div class="col-sm-3">氏名</div>
      <div><%= @customer.full_name %></div>
    </div>

    <div class="mt-4 ml-4 row">
      <div class="col-sm-3">フリガナ</div>
      <div><%= @customer.last_name_kana %><%= @customer.first_name_kana %></div>
    </div>

    <div class="mt-4 ml-4 row">
      <div class="col-sm-3">郵便番号</div>
      <div><%= @customer.postal_code %></div>
    </div>

    <div class="mt-4 ml-4 row">
      <div class="col-sm-3">住所</div>
      <div><%= @customer.address %></div>
    </div>

    <div class="mt-4 ml-4 row">
      <div class="col-sm-3">電話番号</div>
      <div><%= @customer.telephone_number %></div>
    </div>

    <div class="mt-4 ml-4 row">
      <div class="col-sm-3">メールアドレス</div>
      <div><%= @customer.email %></div>
    </div>


　<div class="row mt-2">
   <div class="col-4 text-right">
     <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
   </div>

   <div class="ml-5 col-5">
     <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary" %>
   </div>
  </div>



 </div>