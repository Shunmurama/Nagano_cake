<div class="field">
   <div class="container">
    <h2>商品新規登録</h2>

<%= form_with model: @item, url: admin_items_path do |f| %>

      <div class="row">
       <div class="col-sm-3">
        商品画像
       </div>
       <div class="col">
        <%= f.file_field :image, accept: "image/*" %>
       </div>
      </div>

      <div class="row">
       <div class="col-sm-3">
        商品名
       </div>
       <div class="col">
        <%= f.text_field :name %>
       </div>
      </div>

      <div class="row">
       <div class="col-sm-3">
        商品説明
       </div>
       <div class="col">
        <%= f.text_area :introduction %>
       </div>
      </div>

      <div class="row">
       <div class="col-sm-3">
        ジャンル
       </div>
       <div class="col">
        <%= f.select :genre_id.name, options_from_collection_for_select(Genre.all, :id, :name) %>
       </div>
      </div>

      <div class="row">
       <div class="col-sm-3">
        販売価格
       </div>
       <div class="col">
        <%= f.text_field :price %>円
       </div>
      </div>

      <div class="form-group">
        <%= f.submit '新規登録', class: "btn btn-secondary" %>
      </div>

    <% end %>
   </div>
</div>