<div class="field">
  <div class="container">
    <div class="bg-secondary text-black">商品詳細</div>

    <div class="img-thumbnail">
     <%= image_tag @item.get_image(100,100) %>
    </div>

    <div class="row">
     <div class="col-sm-5">
      商品名
     </div>
     <div class="col">
      <%= @item.name %>
     </div>
    </div>

    <div class="row">
     <div class="col-sm-5">
      商品説明
     </div>
     <div class="col">
      <%= @item.introduction %>
     </div>
    </div>

    <div class="row">
     <div class="col-sm-5">
      ジャンル
     </div>
     <div class="col">
      <%= @item.genre_id %>
     </div>
    </div>

    <div class="row">
     <div class="col-sm-5">
      税込価格<br>
      （税抜価格）
     </div>
     <div class="col">
      <%= (@item.price*@tax).floor %>(<%= @item.price %>)円
     </div>
    </div>

     <div class="form-group">
      <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
     </div>


  </div>
</div>