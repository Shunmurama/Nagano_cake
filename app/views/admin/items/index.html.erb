<div class="container">

   <div class="mt-4 ml-3 table-secondary col-sm-2 text-center"><h3>商品一覧</h3></div>

    <div class="text-right mr-5">
     <%= link_to new_admin_item_path do %>
       <i class="fa-solid fa-plus fa-beat fa-xl" style="color: #000000;"></i>
     <% end %>
    </div>

    <table class='table mt-5'>
      <thead class="table-secondary">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
        </tr>
      </thead>

      <tbody>
       <% @items.each do |item|%>
        <tr>
         <td><%= item.id %></td>
         <td><%= link_to item.name, admin_item_path(item.id) %></td>
         <td><%= item.price.to_s(:delimited) %></td>
         <td><%= item.genre_id %></td>
        </tr>
       <% end %>
      </tbody>
    </table>

<%= paginate @items %>


</div>

