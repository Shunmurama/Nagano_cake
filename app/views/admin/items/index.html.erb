<div class="field">
 <div class="container">

   <div class="bg-secondary text-black">商品一覧</div>

   <table class='table table-hover table-inverse'>
      <thead class="bg-secondary text-black">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
       <% @items.each do |item|%>
        <tr>
         <td><%= item.id %></td>
         <td><%= link_to item.name, admin_item_path(item.id) %></td>
         <td><%= item.price %></td>
         <td><%= item.genre_id %></td>
        </tr>
       <% end %>
      </tbody>
</table>

<%= paginate @items %>

 </div>
</div>

