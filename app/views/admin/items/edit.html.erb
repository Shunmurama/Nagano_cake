<% if @item.errors.any? %>
   <div class="error-box">
    <h4 class="error-text ml-3">未入力の項目があります。</h4>
   </div>
<% end %>

  <div class="container">
    <div class="mt-4 ml-3 table-secondary col-sm-2 text-center"><h4>商品編集</h4></div>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

       <div class="row mt-5">
        <div class="col-4 text-right mr-4">
         商品画像
        </div>
        <div class="col">
         <%= f.file_field :image, accept: "image/*" %>
       </div>
      </div>

      <div class="row mt-3">
       <div class="col-4 text-right mr-4">
        商品名
       </div>
       <div class="col">
        <%= f.text_field :name, class: "hogehoge", size: "30x1" %>
       </div>
      </div>

      <div class="row mt-3">
       <div class="col-4 text-right mr-4">
        商品説明
       </div>
       <div class="col">
        <%= f.text_area :introduction, class: "hogehoge", size: "30x5" %>
       </div>
      </div>

      <div class="row mt-3">
       <div class="col-4 text-right mr-4">
        ジャンル
       </div>
       <div class="col">
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
       </div>
      </div>

      <div class="row mt-3">
       <div class="col-4 text-right mr-4">
        販売価格
       </div>
       <div class="col">
        <%= f.text_field :price, class: "hogehoge", size: "30x1" %>円
       </div>
      </div>

      <div class="form-group text-center mt-5">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>

    <% end %>
   </div>